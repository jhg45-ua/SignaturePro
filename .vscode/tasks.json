{
	"version": "2.0.0",
	"options": {
		"env": {
			"PATH": "/opt/homebrew/bin:/usr/local/bin:${env:PATH}",
			"PKG_CONFIG_PATH": "/opt/homebrew/lib/pkgconfig:/usr/local/lib/pkgconfig"
		}
	},
	"inputs": [
		{
			"id": "buildType",
			"description": "Tipo de build",
			"default": "Debug",
			"type": "pickString",
			"options": [
				"Debug",
				"Release",
				"RelWithDebInfo",
				"MinSizeRel"
			]
		}
	],
	"tasks": [
		{
			"label": "configure",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-S", ".",
				"-B", "build",
				"-G", "Unix Makefiles",
				"-DCMAKE_BUILD_TYPE=${input:buildType}",
				"-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"detail": "Configurar proyecto CMake (elige Debug/Release/etc.)"
		},
		{
			"label": "build",
			"type": "shell",
			"command": "cmake",
			"args": ["--build", "build", "--parallel"],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"detail": "Compilar la aplicación wxWidgets"
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "rm",
			"args": ["-rf", "build"],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"detail": "Limpiar directorio de build"
		},
		{
			"label": "rebuild",
			"type": "shell",
			"dependsOrder": "sequence",
			"dependsOn": ["clean", "configure", "build"],
			"group": "build",
			"detail": "Limpiar y reconstruir completamente"
		},
		{
			"label": "run",
			"type": "shell",
			"command": "./build/bin/app",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"dependsOn": "build",
			"detail": "Ejecutar la aplicación wxWidgets",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		},
		{
			"label": "project-info",
			"type": "shell",
			"command": "./scripts/project-info.sh",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"detail": "Mostrar información del proyecto",
			"presentation": {
				"focus": true,
				"panel": "dedicated",
				"clear": true
			}
		}
	]
}