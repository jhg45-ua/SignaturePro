{
	"version": "2.0.0",
	"options": {
		"env": {
			"PATH": "/opt/homebrew/bin:/usr/local/bin:${env:PATH}",
			"PKG_CONFIG_PATH": "/opt/homebrew/lib/pkgconfig:/usr/local/lib/pkgconfig"
		}
	},
	"inputs": [
		{
			"id": "buildType",
			"description": "Tipo de build",
			"default": "Debug",
			"type": "pickString",
			"options": [
				"Debug",
				"Release",
				"RelWithDebInfo",
				"MinSizeRel"
			]
		}
	],
	"tasks": [
		{
			"label": "configure",
			"type": "shell",
			"command": "cmake",
			"args": [
				"-S", ".",
				"-B", "build",
				"-G", "Unix Makefiles",
				"-DCMAKE_BUILD_TYPE=${input:buildType}",
				"-DCMAKE_EXPORT_COMPILE_COMMANDS=ON"
			],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"detail": "Configurar proyecto CMake con Unix Makefiles",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "build",
			"type": "shell",
			"command": "./scripts/build.sh",
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"problemMatcher": ["$gcc"],
			"detail": "Compilar la aplicaci√≥n wxWidgets (paralelo) con informaci√≥n adicional",
			"dependsOn": "configure",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "clean",
			"type": "shell",
			"command": "rm",
			"args": ["-rf", "build"],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"detail": "Limpiar directorio de build",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "rebuild",
			"type": "shell",
			"dependsOrder": "sequence",
			"dependsOn": ["clean", "build"],
			"group": "build",
			"detail": "Limpiar y reconstruir completamente",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "run",
			"type": "shell",
			"command": "./scripts/run.sh",
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"dependsOn": "build",
			"detail": "Ejecutar la aplicaci√≥n wxWidgets con verificaci√≥n",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			},
			"isBackground": false
		},
		{
			"label": "run-debug",
			"type": "shell",
			"command": "lldb",
			"args": ["./build/bin/app"],
			"group": "test",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"dependsOn": "build",
			"detail": "Ejecutar la aplicaci√≥n en modo debug con LLDB",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			}
		},
		{
			"label": "check-dependencies",
			"type": "shell",
			"command": "sh",
			"args": ["-c", "echo 'üîç Verificando dependencias...' && brew list wxwidgets spdlog cmake && echo '‚úÖ make disponible:' && which make"],
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"detail": "Verificar dependencias instaladas (wxwidgets, spdlog, cmake, make)",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "project-info",
			"type": "shell",
			"command": "./scripts/project-info.sh",
			"group": "build",
			"options": {
				"cwd": "${workspaceFolder}"
			},
			"detail": "Mostrar informaci√≥n y estad√≠sticas del proyecto",
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": true,
				"panel": "dedicated",
				"showReuseMessage": false,
				"clear": true
			}
		}
	]
}